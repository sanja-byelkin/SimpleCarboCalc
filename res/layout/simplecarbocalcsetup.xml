<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/CarbUnitsToShow" />

    <Spinner
        android:id="@+id/setup_unit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/UnitChoose" />
	<TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/LanguageToShowProducts" />

    <Spinner
        android:id="@+id/setup_prod_lang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
	<LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
	    <Button
			android:id="@+id/setup_confirm"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="right"
			android:layout_weight="1"
			android:text="@android:string/ok" />
		<Button
			android:id="@+id/setup_cancel"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="left"
			android:layout_weight="1"
			android:text="@android:string/cancel" />

	</LinearLayout>    
</LinearLayout>